<% if (locals.user) { %>
    <%- include("partials/header.ejs", {user: user}) %>
<% } else { %>
    <%- include("partials/header.ejs") %>
<% } %>
<body>
    <div class="container">
        <h1>Sign-Up</h1>
        <form action="/sign-up" method="post">
            <input type="text" class="" required id="username" name="username" placeholder="Username"><br />
            <input type="text" class="" required id="password" name="password" placeholder="Password"><br />
            <input type="submit" class="bg-primary text-white rounded" value="Sign-Up"><br />
        </form>
        <% if (locals.error) {%>
            <p><%= error %></p>
        <% } %>
        <h2>Already have an account?</h2>
        <a href="/login">Login Here!</a>
    </div>
</body>
<%- include("partials/footer.ejs") %>